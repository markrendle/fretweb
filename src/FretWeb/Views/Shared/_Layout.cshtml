<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FretWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/FretWeb.styles.css" asp-append-version="true" /> *@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FretWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @* <ul class="navbar-nav flex-grow-1"> *@
                    <div class="dropdown show">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownScales" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Scales
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownScales">
                            <a class="dropdown-item" asp-controller="Scales" asp-action="Get" asp-route-name="major">Major</a>
                            <a class="dropdown-item" asp-controller="Scales" asp-action="Get" asp-route-name="minor">Minor</a>
                            <a class="dropdown-item" asp-controller="Scales" asp-action="Get" asp-route-name="ionian">Ionian</a>
                            <a class="dropdown-item" asp-controller="Scales" asp-action="Get" asp-route-name="dorian">Dorian</a>
                            <a class="dropdown-item" asp-controller="Scales" asp-action="Get" asp-route-name="phrygian">Phrygian</a>
                            <a class="dropdown-item" asp-controller="Scales" asp-action="Get" asp-route-name="lydian">Lydian</a>
                            <a class="dropdown-item" asp-controller="Scales" asp-action="Get" asp-route-name="mixolydian">Mixolydian</a>
                            <a class="dropdown-item" asp-controller="Scales" asp-action="Get" asp-route-name="aeolian">Aeolian</a>
                            <a class="dropdown-item" asp-controller="Scales" asp-action="Get" asp-route-name="locrian">Locrian</a>
                        </div>
                    </div>
                        @* <li class="nav-item"> *@
                        @*     <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a> *@
                        @* </li> *@
                        @* <li class="nav-item"> *@
                        @*     <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
                        @* </li> *@
                    @* </ul> *@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - FretWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
